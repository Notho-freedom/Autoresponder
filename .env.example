# ============= AWS SERVICES ONLY =============
# Email: AWS SES
# SMS: AWS SNS

# AWS Credentials (shared for SES and SNS)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# AWS SES Configuration (Email)
AWS_SES_FROM_EMAIL=no-reply@example.com
AWS_SES_FROM_NAME=Your Company Name
AWS_SES_REPLY_TO=support@example.com

# AWS SNS Configuration (SMS)
AWS_SNS_SENDER_ID=YourApp

# Security
SECRET_KEY=your_secret_key_for_webhook_authentication

# Firestore Configuration (OBLIGATOIRE)
# Option 1: Chemin vers le fichier JSON credentials (d√©veloppement local)
FIREBASE_CREDENTIALS_PATH=firestore-credentials.json

# Option 2: JSON credentials en string (production - Render/Railway)
# Copier tout le contenu du fichier JSON en une seule ligne
# FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"votre-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"}

# Server Configuration
HOST=0.0.0.0
PORT=8000